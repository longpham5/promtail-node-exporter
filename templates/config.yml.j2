server:
  http_listen_port: {{ promtail_http_port | default(9080) }}
  grpc_listen_port: 0
positions:
  filename: /var/lib/promtail/positions.yaml
clients:
  - url: {{ loki_url | default('https://loki.longppham5.xyz/loki/api/v1/push') }}
scrape_configs:
- job_name: system
  static_configs:
  - targets:
      - localhost
    labels:
      job: postfix-logs
      __path__: /var/log/mail.log